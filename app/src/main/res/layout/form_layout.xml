<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View style="@style/divider_horizontal_1px" />

    <LinearLayout style="@style/edit_item" >

        <EditText
            android:id="@+id/etDemoTimeRefresher"
            style="@style/edit_item_right_et"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:hint="请输入时间间隔"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="6dp"
            android:importantForAutofill="no" />

        <ImageButton
            android:id="@+id/ibtnDemoTimeRefresher"
            style="@style/img_btn"
            android:background="@drawable/to_alpha"
            android:padding="6dp"
            android:src="@drawable/forward_light" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/content_item"
        android:background="@drawable/to_alpha" >

        <ImageView
            android:id="@+id/ivDemoViewHead"
            style="@style/content_item_lf_img"
            android:layout_height="30dp"
            android:background="@color/alpha_1"
            android:layout_marginRight="6dp"
            android:layout_width="30dp"/>

        <TextView
            android:id="@+id/tvDemoViewName"
            style="@style/content_item_lf_tv"
            android:layout_weight="1"
            android:text="item" />

        <TextView
            android:id="@+id/tvDemoViewNumber"
            style="@style/content_item_rt_tv"
            android:text="right text" />

        <ImageView style="@style/content_item_rt_img" />

    </LinearLayout>
    <Button
        android:id="@+id/btnDemoThreadPoolDefault"
        android:text="default thread pool"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>